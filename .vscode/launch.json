  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to hello-world project",
      "port": 9229,
      "cwd": "${workspaceFolder}/samples/hello-world",
      "internalConsoleOptions": "openOnSessionStart",
      "restart": true,
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to solar-system project",
